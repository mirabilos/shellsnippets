# Shell-and-Perl snippet to merge M*zilla Firef*x preferences files.

eval 'cat "$@" | perl "$0"; exit $?'
if 0;

my %foo = ();

while (<>) {
	chomp;
	next unless /^(?:user_)?pref\("([^"]+)",\s+(.*)\);$/;

	print "# overriding $1 from " . $foo{$1} . " to $2\n"
	    if (exists $foo{$1}) && ($foo{$1} ne $2);
	#print "# $1 = $2\n";

	$foo{$1} = $2;
}

for (sort keys %foo) {
	print "user_pref(\"$_\", " . $foo{$_} . ");\n";
}
