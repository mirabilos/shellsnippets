# hexdump, not NUL byte safe

typeset -Uui16 -Z11 pos=0
typeset -Uui16 -Z5 hv
typeset -i1 wc=0x0A
dasc=
nl=${wc#1#}
while IFS= read -r line; do
	line=$line$nl
	while [[ -n $line ]]; do
		hv=1#${line::1}
		if (( (pos & 15) == 0 )); then
			(( pos )) && print "$dasc|"
			print -n "${pos#16#}  "
			dasc=' |'
		fi
		print -n "${hv#16#} "
		if (( (hv < 32) || (hv > 126) )); then
			dasc=$dasc.
		else
			dasc=$dasc${line::1}
		fi
		(( (pos++ & 15) == 7 )) && print -n -- '- '
		line=${line:1}
	done
done
while (( pos & 15 )); do
	print -n '   '
	(( (pos++ & 15) == 7 )) && print -n -- '- '
done
print "$dasc|"
