# hexdump, NUL byte and binary safe

# integer-base-one-3Ar
typeset -Uui16 -Z11 pos=0
typeset -Uui16 -Z5 hv=2147483647
dasc=
if read -arN -1 line; then
	typeset -i1 line
	i=0
	while (( i < ${#line[*]} )); do
		hv=${line[i++]}
		if (( (pos & 15) == 0 )); then
			(( pos )) && print "$dasc|"
			print -n "${pos#16#}  "
			dasc=' |'
		fi
		print -n "${hv#16#} "
		if (( (hv < 32) || (hv > 126) )); then
			dasc=$dasc.
		else
			dasc=$dasc${line[i-1]#1#}
		fi
		(( (pos++ & 15) == 7 )) && print -n -- '- '
	done
fi
while (( pos & 15 )); do
	print -n '   '
	(( (pos++ & 15) == 7 )) && print -n -- '- '
done
(( hv == 2147483647 )) || print "$dasc|"
