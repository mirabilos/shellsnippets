# hexdump, not NUL byte safe, Unicode (UCS-2, OPTU-16) output

typeset -Uui16 -Z11 pos=0
typeset -Uui16 -Z7 hv
typeset -i1 wc=0x0A
typeset -i lpos
dasc=
nl=${wc#1#}
while IFS= read -r line; do
	line=$line$nl
	lpos=0
	while (( lpos < ${#line} )); do
		wc=1#${line:(lpos++):1}
		if (( (wc < 32) || \
		    ((wc > 126) && (wc < 160)) )); then
			dch=.
		elif (( (wc & 0xFF80) == 0xEF80 )); then
			dch=�
		else
			dch=${wc#1#}
		fi
		if (( (pos & 7) == 7 )); then
			dasc=$dasc$dch
			dch=
		elif (( (pos & 7) == 0 )); then
			(( pos )) && print "$dasc|"
			print -n "${pos#16#}  "
			dasc=' |'
		fi
		let hv=wc
		print -n "${hv#16#} "
		(( (pos++ & 7) == 3 )) && \
		    print -n -- '- '
		dasc=$dasc$dch
	done
done
while (( pos & 7 )); do
	print -n '     '
	(( (pos++ & 7) == 3 )) && print -n -- '- '
done
print "$dasc|"
